{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2016",
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "rootDirs": ["./src"]
  }
}
